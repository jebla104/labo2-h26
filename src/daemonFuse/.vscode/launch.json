{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "attach",
            "gdbpath": "${env:HOME}/arm-cross-comp-env/arm-raspbian-linux-gnueabihf/bin/arm-raspbian-linux-gnueabihf-gdb",
            "name": "Debogage distant avec gdbserver",
            "executable": "./build/setr_tp2_daemonfuse",
            "target": "${config:monProjet.raspberryIP}:4568",
            "remote": true,
            "autorun": [
                "set sysroot ${env:HOME}/arm-cross-comp-env/arm-raspbian-linux-gnueabihf/arm-raspbian-linux-gnueabihf/sysroot/"
            ],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "syncAndStartGDB"
        },
        {
            "name": "Debug LOCAL (VM)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/setr_tp2_daemonfuse",
            "args": [
                "-f", // Run in foreground (CRITICAL for debugging FUSE)
                "-d", // Debug mode (prints FUSE info)
                "tmp/fuse_mnt" // A test folder you created on the VM
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build_local",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}